@page "/Account/Login"
@model LoginModel
@{
}

<h1>
    Bem-vindo de volta!
</h1>

<form class="form" method="post">
    <div class="form-group">
        <label asp-for="User.UserName">Nome de usuário:</label>
        <input asp-for="User.UserName" type="text" />
        <span asp-validation-for="User.UserName"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Password">Senha:</label>
        <input asp-for="User.Password" type="password" />
        <span asp-validation-for="User.Password"></span>
    </div>

    <div class="form-check">
        <input asp-for="User.RememberMe" type="checkbox" />
        <label asp-for="User.RememberMe">Lembrar-me</label>
        <span asp-validation-for="User.RememberMe"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Entrar" />
    </div>
</form>

<p class="action-link">
    Não tem conta? 
    <a asp-page="SignIn">Criar conta</a>
</p>


@page "/sair"
@model LogoutModel
@{
}

<h1>Meu perfil</h1>

<form class="form" method="post">
    <div class="form-group">
        <label>Nome de usuário:</label>
        <input type="text" value="@Model.UserInfo.UserName" readonly />
    </div>
    <div class="form-group">
        <label>E-mail:</label>
        <input type="text" value="@Model.UserInfo.Email" readonly />
    </div>
    <div class="form-group">
        <input type="submit" value="Sair" style="background-color: mediumvioletred;" />
    </div>
</form>
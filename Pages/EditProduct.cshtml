@page "/editar/{prodId}"
@model EditProductModel

<a asp-page="Index">
    <img src="~/img/go_back.png" class="go-back" />
</a>

@if (ViewData["AlertEdition"] != null)
{
    <form class="alert" method="post">
        <p>@ViewData["AlertEdition"]</p>
        <button type="submit" asp-page-handler="CloseAlert">
            <img src="~/img/delete_24px.png" />
        </button>
    </form>
}

<h1>Edite o produto</h1>

<form class="form" id="form" method="post">
    <div class="form-group">
        <label asp-for="Product.Name">Nome do produto:</label>
        <input type="text" asp-for="Product.Name" autofocus />
        <span class="error-message" asp-validation-for="Product.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price">Preço:</label>
        <input type="number" asp-for="Product.Price" />
        <span class="error-message" asp-validation-for="Product.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Quantity">Quantidade:</label>
        <input type="number" asp-for="Product.Quantity" />
        <span class="error-message" asp-validation-for="Product.Quantity"></span>
    </div>
    <div class="form-group">
        <input form="form" type="submit" value="Salvar" />
    </div>
</form>
